<h1>Your Cart</h1>

<% if notice %>
  <p><%= notice %></p>
<% end %>

<% if current_cart %>
  <% current_cart.line_items.each do |line_item| %>
    <p><%= link_to line_item.item.title, item_path(line_item.item) %> | <%= line_item.item.money_price %> | Quantity: <%= line_item.quantity %> | <% if line_item.item.inventory < 5 %>
      <strong>There are only <%= line_item.item.inventory %> left in stock.</strong>
    <% end %> </p>
  <% end %>

  <p>Order total: <strong><%= number_to_currency(current_cart.money_total) %></strong> </p>

  <%= button_to 'Checkout', checkout_path %>
<% else %>
  <p>Do some shopping!</p>
<% end %>
